/* 影人样式开始 */
.yingren-box {
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
}

.yingren {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
}

.yingren-info-box {
  display: flex;
  flex-direction: row;
  overflow-y: hidden;
  overflow-x: auto;
}

.yingren-info {
  display: flex;
  flex-direction: column;
  justify-content: left;
  margin-top: 25rpx;
  margin-right: 28rpx;
}

.yingren-info image {
  width: 150rpx;
  height: 200rpx;
  border-radius: 5px;
}

.yingren-name {
  font-size: 30rpx;
  color: #191919;
  margin-top: 20rpx;
}

.yingren-job {
  font-size: 25rpx;
  color: #8A8B8B;
  margin-top: 16rpx;
}
/* 影人样式结束 */
/* 预告片/剧照样式开始 */
.yugaopian-box {
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
}

.yugaopian-box .title-box {
  box-sizing: border-box;
  padding:15rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.yugaopian-box .title-box>text {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
}

.yugaopian-box .title-box .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.yugaopian-box .title-box .right text {
  font-size: 30rpx;
  color: #868686;
  font-weight: 600;
  margin-right: 10rpx;
}

.yugaopian-box .title-box .right image {
  width: 20rpx;
  height: 20rpx;
}

.yugaopian-box .imgsYugaopian-box {  /*scroll-view*/
  white-space: nowrap;
}

.yugaopian-box .imgsYugaopian-box .img {
  display: inline-block;
}

.yugaopian-box .imgsYugaopian-box .yugaopian {
  width: 400rpx;
  height: 250rpx;
  margin-right: 5rpx;
}

.yugaopian-box .imgsYugaopian-box .img image {
  height: 250rpx;
  margin-right: 5rpx;  /*宽度自适应，在image标签中加入mode="heightFix"*/
}
/* 预告片/剧照样式结束 */
/* 短评样式开始 */
.duanping-box {
  width: 100%;
  height: 100%;
  border-radius: 8px;
  background: #fff;
  box-sizing: border-box;
  margin-top: 60rpx;
  padding:25rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.duanping-box .title-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.duanping-box .title-box .duanping {
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
}

.duanping-box .title-box .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.duanping-box .title-box .right text {
  font-size: 30rpx;
  color: #868686;
  font-weight: 600;
  margin-right: 10rpx;
}

.duanping-box .title-box .right image {
  width: 20rpx;
  height: 20rpx;
}

.user-duanping-info {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 25rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(0,0,0,.2);
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info>image {    /*短评中用户的头像*/
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 15rpx;
}

.userName-box {
  display: flex;
  flex-direction: column;
}

.userName {
  font-size: 30rpx;
  color: #000;
}

.user-pingjia-box {
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.duanping-time {
  margin-left: 10rpx;
  font-size: 25rpx;
  color: #8A8B8B;
}

.user-text {
  font-size: 30rpx;
  color: #191919;
  margin-top: 20rpx;
}

.dianzan {
  width: 65rpx;
  height: 40rpx;
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.dianzan image {
  width: 35rpx;
  height: 35rpx;
  margin-top: 10rpx;
}

.dianzan text {
  font-size: 25rpx;
  color: #8a8a8a;
}

.bottom-title {
  display: flex;
  margin-top: 20rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.bottom-title text {
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
}

.bottom-title image {
  width: 20rpx;
  height: 20rpx;
}
/* 短评样式结束 */
/* 喜欢这部电影…样式开始 */
.like-box {
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
}

.like-box .like {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
}

.like-movie-box {
  display: flex;
  flex-direction: row;
  overflow-y: hidden;
  overflow-x: auto;
}

::-webkit-scrollbar {  /*去掉滚动条*/
  width: 0;
  height: 0;
  color: transparent;
}

.like-movie-box .movie-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 28rpx;
}

.like-movie-box .movie-info image {
  width: 150rpx;
  height: 200rpx;
  border-radius: 5px;
}

.like-movie-box .movie-info .movie-name {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  margin-top: 10rpx;
}

.like-movie-box .movie-info .pingfen {
  font-size: 25rpx;
  color: #8B8C8C;
  margin-top: 10rpx;
}
/* 喜欢这部电影…样式结束 */