/* pages/movieDetails/movieDetails.wxss */
/* 电影信息样式开始 */
@import '../../template/stars.wxss';  /*构建星星样式*/
@import '../../template/jianjie.wxss';  /*简介样式*/
.big-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 28rpx;
  background: #F0F2F5;
}

.movie-info {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
}

.movie-info>image {
  width: 200rpx;
  height: 280rpx;
  border-radius: 5px;
}

.info {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.name {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
}

.other-name {
  font-size: 30rpx;
  color: #838383;
  margin-top: 5rpx;
}

.movie-type {
  font-size: 22rpx;
  color: #838383;
  margin:20rpx 0;
}

.xk-big-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.xk-big-box>view {
  width: 210rpx;
  height: 60rpx;
  margin-top: 15rpx;
  text-align: center;
  border-radius: 5px;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.xk-big-box .xiangkan-icon,
.xk-big-box .kanguo-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.xk-big-box text {
  color: #4C4C4C;
}
/* 电影信息样式结束 */
/* 评分框样式开始 */
.pingfen-box {
  width: 100%;
  height: 180rpx;
  border-radius: 8px;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pingfen-box .title {
  width: 100%;
  box-sizing: border-box;
  padding:15rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.pingfen-box .title text {
  font-size: 25rpx;
  color: #000;
  font-weight: 600;
}

.pingfen-box .title image {
  width: 20rpx;
  height: 20rpx;
}

.pingfen-imgs-box {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.pingfen {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.pingfen-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-right: 15rpx;  /*跟右边倒三角星星的距离*/
}

.pingfen-left text {
  font-size: 45rpx;
  color: #000;
  font-weight: 600;
}

.pingfen-left .stars-box {
  width: 90rpx;
  height: 15rpx;
}

.pingfen-left image {
  width: 15rpx;
  height: 15rpx;
}

.pingfen-right {
  display: flex;
  flex-direction: row;
}

.pingfen-right .left-stars-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 60rpx;
  height: 75rpx;
  margin-right: 10rpx;
}

.pingfen-right .left-stars-box>view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 60rpx;
  height: 12rpx;
}

.pingfen-right .left-stars-box>view image {
  width: 12rpx;
  height: 12rpx;
}

.pingfen-right .right-progress-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 150rpx;
  height: 75rpx;
}

.pingfen-right .right-progress-box>view {
  width: 150rpx;
  height: 12rpx;
  border-radius: 3rpx;
  background: #e6e6e6;
}

.in-progress {
  height: 12rpx;
  border-radius: 3rpx;
  background: #FFAC2D;
}

.renshu {
  display: block;
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #8a8a8a;
}
/* 评分框样式结束 */
