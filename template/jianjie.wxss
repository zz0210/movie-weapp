.jianjie-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  border-radius: 8px;
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 60rpx;
}

.jianjie {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
}

.jianjie-text {
  margin-top: 20rpx;
  font-size: 35rpx;
  color: #000;
  display: -webkit-box;  /*以下4行实现收缩*/
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
   overflow:hidden;
}

.ellipsis-btn {  /*展开/收起*/
  display: block;
  float: right;
  font-size: 30rpx;
  color: #666;
  margin-top: 10rpx;
}

.ellipsis {  /*收缩时展示4行*/
  -webkit-line-clamp:4; 
}

.unellipsis {  /*展开时显示全部*/
  -webkit-line-clamp:0; 
}